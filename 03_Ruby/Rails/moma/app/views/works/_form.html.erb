<%= form_for @work do |f| %>

<%= f.label :title %>
<%= f.text_field :title %>
<br />
<%= f.label :year %>
<%= f.text_field :year %>
<br />
<%= f.label :medium %>
<%= f.text_field :medium %>
<br />
<%= f.label :style %>
<%= f.text_field :style %>
<br />
<%= f.label :image %>
<%= f.url_field :image %>
<br />
<%= f.label :artist_id %>
<%= f.select :artist_id, Artist.pluck(:name, :id), :include_blank => true %>

<br /><br />
<%= f.submit%>

<% end %>