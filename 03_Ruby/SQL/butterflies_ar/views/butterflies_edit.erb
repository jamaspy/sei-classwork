<h1>Create New Butterfly</h1>
<form action="/butterflies/<%= @butterfly["id"] %>" method="post">
  <label for="">
    Name:
    <input type="text" name="name" value="<%= @butterfly["name"] %>" require="require" autofocus="autofocus">
  </label>

  <label for="">
    Family:
    <input type="text" name="family" value="<%= @butterfly["family"] %>">
  </label>

  <label for="">
    Image:
    <input type="url" name="image" value="<%= @butterfly["image"] %>">
  </label>
  <br/>
  <br/>
    <label>
    Larval Plant:
    <select name="plant_id">
      <option></option>
      <% Plant.all.each do |plant| %>
        <option value="<%= plant.id %>" <%= "selected" if plant.id == @butterfly.plant_id %>><%= plant.name %></option>
      <% end %>
    </select>
  </label>

  <button>Edit Butterfly</button>
</form>
